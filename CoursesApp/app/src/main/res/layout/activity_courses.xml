<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoursesActivity">

    <EditText
        android:id="@+id/editTextCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Course name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextCourseName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextCourseName"
        app:layout_constraintTop_toBottomOf="@+id/editTextCourseName" />

    <Button
        android:id="@+id/btnAddNewCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/editTextTeacherName"
        app:layout_constraintStart_toStartOf="@+id/editTextTeacherName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTeacherName" />

    <EditText
        android:id="@+id/editTextTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Teacher"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/spinnerCategories"
        app:layout_constraintStart_toStartOf="@+id/spinnerCategories"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategories" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Courses List"
        app:layout_constraintEnd_toEndOf="@+id/btnAddNewCourse"
        app:layout_constraintStart_toStartOf="@+id/btnAddNewCourse"
        app:layout_constraintTop_toBottomOf="@+id/btnAddNewCourse" />
</androidx.constraintlayout.widget.ConstraintLayout>